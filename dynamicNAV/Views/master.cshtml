<!-- SEO END -->

	<style type="text/css">
		
.svgMap {
    margin: 0 auto 25px auto;
}

/* Always set the map height explicitly to define the size of the div
 * element that contains the map. */
#map {
    height:100%;
    min-height: 600px;
}
/* Optional: Makes the sample page fill the window. */

#floating-panel {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw ! important;
  z-index: 5;
  color: #ffffff;
  background-color: #03297a;
  padding: 25px 0 25px 0;
  text-align: center;
  border:none;
}
.modDrop {
  height:40px;
  width:280px;
  margin: 0 15px 0 15px;
  padding-left: 15px;
  color: #134bab;
  font-size: 16px;
  font-family: 'Roboto','sans-serif';
}
.mapSelection .select:hover  {
  color: red;
  padding: 15px 0 15px 0;
}

svg {
  display: block;
  width: 100%;
}
#states *.on {
  fill: red;
}

.list-of-states {
  margin: 0;
  padding: 0;
  columns: 100px auto;
  column-gap: 8px;
  list-style: none;
}
.list-of-states li {
  padding: 2px 4px;
  display: inline-block;
  width: 100%;
}
.list-of-states li.on {
  background: red;
  color: white;
  font-weight: bold;
}



	</style>

  </head>

  <body data-spy="scroll" data-target=".navbar" data-offset="50">

