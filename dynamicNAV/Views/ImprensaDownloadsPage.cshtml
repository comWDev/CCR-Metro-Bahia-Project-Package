@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ImprensaDownloadsPage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Imprensa.cshtml";
}
<!-- ------------------ Dynamic Header ------------------ -->

@Html.Partial("archetypeSHeadPartial-Imprensa")

<!-- ------------------ Dynamic Header ------------------ -->
  <div class="mobileMargins container-fluid col-centered">
    <div class="container-fluid greyBody"  style="max-width: 1200px; background-color: #f9f9f9;">
    <div class="row col-12-md">
    <h2 class="subhead">@Umbraco.Field("subTitle", removeParagraphTags: true)</h2>
	
		
@if (Model.Content.HasValue("subTitleIcon"))
{
    var caseStudyImagesList = Model.Content.GetPropertyValue<string>("subTitleIcon").Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries).Select(int.Parse);
    var caseStudyImagesCollection = Umbraco.TypedMedia(caseStudyImagesList).Where(x => x != null);

    foreach (var subTitleIcon in caseStudyImagesCollection)
        {      
            <img class="img-responsive acessiIcon" src="@subTitleIcon.Url" />
        }                                                               
}

		
			
    </div>

   <div class="row col-md-12 body-copy">
      
      <p>@Umbraco.Field("pageBodyText", removeParagraphTags: true)</p>

    </div>


<div class="row col-md-12 body-copy">

<div class="panel panel-default" id="clippings" style="margin-top:35px; border-radius: 0px; border: 0;  background-color: transparent;">
    <div class="susPanelMobile panel-heading" style="height: 36px; padding: 0; background-color: #134bab;">
    <h2 class="accordionTitle"><a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#clippings-tab">
        <div class="accordionTitle" style="height: 100%; width: 88%; float:left;">Clippings</div></a></h2>
    </div>

    <div id="clippings-tab" class="panel-collapse collapse in" style=" background-color: transparent;">
      <div class="panel-body body-copy-grey" style="background-color: transparent;">

                @Html.Partial("ListClippingItems")



      </div>
    </div>
  </div>

<!-- ------------------ Dynamic Tabs ------------------ -->

    @Html.Partial("archetypeCustDownloadTabs")

<!-- ------------------ Dynamic Tabs ------------------ -->    
</div>
</div>
</div>