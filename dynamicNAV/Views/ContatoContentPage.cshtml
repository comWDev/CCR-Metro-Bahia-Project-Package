@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ContatoContentPage>
    @using ContentModels = Umbraco.Web.PublishedContentModels;
    @{
    Layout = "Contato.cshtml";
    }

    <!-- ------------------ Dynamic Header ------------------ -->
    
    @Html.Partial("archetypeSHeadPartial-Contato")

    <!-- ------------------ Dynamic Header ------------------ -->


    <div class="mobileMargins container-fluid col-centered">
        <div class="container-fluid greyBody" style="max-width: 1200px; background-color: #f9f9f9;">

    
    <div style="display:inline-block;">
    <!-- Dynamic Atendimento e Horario content -->
    
    @Html.Partial("archetypeContactAtendimentoPartial")
    
    @Html.Partial("archetypeContatoHorarioPartial")
    

    
    <!-- Dynamic Atendimento e Horario content -->    
    </div>

<div class="panel panel-default" style="border-radius: 0px; border: 0; margin-top:15px; background-color: transparent;">
    <div class="panel-heading" style="height: 36px; padding: 0; background-color: #134bab;"><h2 class="accordionTitle"><a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse1"><div class="accordionTitle" style="height: 100%; width: 88%; float:left;">Envie uma mensagem</div></a></h2>
    </div>

    <div id="collapse1" class="panel-collapse collapse in" style=" background-color: transparent;">
      <div class="panel-body body-copy-grey" style="background-color: transparent;">

            <div class="row col-md-12 body-copy">
                <div class="row col-sm-4" style="margin:0 0 10px 0;">
                    @{
                    var typedMediaPickerSingle = Model.Content.GetPropertyValue<IPublishedContent>
                        ("atendimentoImage");
                        if (typedMediaPickerSingle != null)
                        {
                        <img class="img-responsive" src="@typedMediaPickerSingle.Url" style="" alt="@typedMediaPickerSingle.GetPropertyValue(" alt")" />
                        }
                        }
                </div>
                <div class="row col-sm-4" style="margin: 0 3px 10px 0;">
                    @{
                    var typedMediaPickerSingle2 = Model.Content.GetPropertyValue<IPublishedContent>
                        ("horarioImage");
                        if (typedMediaPickerSingle2 != null)
                        {
                        <img class="img-responsive" src="@typedMediaPickerSingle2.Url" style="" alt="@typedMediaPickerSingle2.GetPropertyValue(" alt")" />
                        }
                        }
                </div>
                <div class="row col-sm-12">
                    @if(TempData["ContactSuccess"] != null && (bool)TempData["ContactSuccess"])
                    {
                    <p>Your message was sent successfully</p>
                    }
                    else
                    {
                    Html.RenderAction("RenderForm", "ContactSurface");
                    }

    </div>
    </div>
</div>

                </div>

            </div>

        </div>
    </div>
